<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp">

        <ImageView
            android:id="@+id/new_song_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/new_song_image"
            android:scaleType="fitCenter"
            android:src="@drawable/no_album_image" />

        <TextView
            android:id="@+id/new_song_title"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_song_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="12dp"
            android:text="被伤过的心还可以爱谁"
            android:textSize="20sp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/new_song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_song_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="12dp"
            android:text="六哲"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/new_song_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="12dp"
            android:background="transparent"
            android:src="@drawable/ic_options"
            android:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/new_song_play_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="268dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:background="transparent"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/splash_icon" />
    </RelativeLayout>

</android.support.v7.widget.CardView>